<html>
    <%- include('./partials/head.ejs') %>
    <body>
      <%- include('./partials/nav.ejs') %>
        <div class="row container">
            <form class="col s12" action="/items" method="POST">
              <div class="row">
                <div class="input-field col s6">
                  <i class="material-icons prefix">shopping_cart</i>
                  <input id="item_name" type="text" class="validate" name="name">
                  <label for="icon_prefix">Item Name</label>
                </div>
                <div class="input-field col s6">
                  <i class="material-icons prefix">request_quote</i>
                  <input id="price" type="tel" class="validate" name="price">
                  <label for="price">Price</label>
                </div>
              </div>
              <button class="btn">Add Item</button>
            </form>
        </div>        
    </body>
</html>