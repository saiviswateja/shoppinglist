<html>
    <%- include('./partials/head.ejs') %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div class="container">
            <h4>Item Detail</h4>
            <div>
                <h5>item name: <%= item.name %> </h5>
                <h5>item price: <%= item.price %> </h5>
            </div>
            <a id="deleteBtn" data-id="<%=item.id%>" class="delete btn" href="">Delete</a>
        </div>
        <script>
            deleteBtn.onclick = function(e){
                e.preventDefault();
                const id = deleteBtn.dataset.id;
                const endpoint = `/items/${id}`;
                fetch(endpoint,{
                    method:'DELETE'
                }).then((res)=>res.json())
                .then(data=>{
                    console.log(data);
                    window.location.href = data.redirect;
                })
                .catch(err=>{});
            }
        </script>
    </body>
</html>